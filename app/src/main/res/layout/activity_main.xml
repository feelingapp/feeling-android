<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent" tools:background="@tools:sample/backgrounds/scenic[1]">

    <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
        <size android:height="221dp" android:width="316dp"/>
    </shape>
    <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" app:srcCompat="@drawable/ic_launcher_background"
            android:id="@+id/logo_image" android:contentDescription="TODO"/>
    <TextView android:gravity="center" android:height="56dp" android:layout_height="wrap_content"
              android:layout_width="fill_parent" android:lineSpacingMultiplier="1.56"
              android:style="@style/HeyNiceToMeetYo"
              android:text="Hey, nice to meet you! Choose one of the options below to get started."
              android:width="316dp"/>
    <Button
            android:text="@string/continue_with_facebook"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/facebook_login_button"
            style="@style/Widget.AppCompat.Button.Colored"/>
    <Button
            android:text="@string/continue_with_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/email_login_button"
            style="@style/Widget.AppCompat.Button"/>
    <TextView
            android:text="@string/sign_up_disclaimer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/textView"/>

</LinearLayout>