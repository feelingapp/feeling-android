<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!-- Default font styling. -->
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textColor">#FF1B1B1B</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="StandardText">
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textColor">#FF1B1B1B</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="HeyNiceToMeetYo">
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textColor">#FF1B1B1B</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_marginLeft">48dp</item>
        <item name="android:layout_marginRight">48dp</item>
    </style>

    <style name="SignInButton" parent="@style/Widget.AppCompat.Button.Colored">
        <item name="android:width">316dp</item>
        <item name="android:height">56dp</item>
        <item name="android:textAllCaps">false</item>
    </style>

</resources>
